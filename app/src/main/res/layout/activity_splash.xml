<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dicoding.myandroidapp.SplashActivity">

    <com.greenfrvr.rubberloader.RubberLoaderView
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/loader1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:loaderExtraColor="#FF7B1FA2"
        app:loaderPrimeColor="#FFFFA100"
        app:loaderSize="tiny"
        android:layout_weight="1"
        app:loaderRippleColor="#FFFFA100"
        app:loaderRippleMode="cycle"/>

</RelativeLayout>